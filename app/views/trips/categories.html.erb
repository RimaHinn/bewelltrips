
<div class= "container">
<div class="form-retreat-list">
  <h2>Trip Types</h2>
</div>

<div class="form-retreat-categories justify-content-center  d-flex flex-space-around" >


   <%= link_to categories_path, class: "btn-categories d-flex flex-column" do %>
      <span>Yoga</span>
      <div class="d-flex align-items-center justify-content-center flex-grow-1">
         <i class="fa-solid fa-om fa-2xl"></i>
      </div>
    <% end %>
    <%= link_to categories_path, class: "btn-categories d-flex flex-column" do %>
      <span>Hiking</span>
      <div class="d-flex align-items-center justify-content-center flex-grow-1">
        <i class= "fa-solid fa-person-hiking fa-2xl"></i>
      </div>
    <% end %>
    <%= link_to categories_path, class: "btn-categories d-flex flex-column" do %>
      <span>Spa</span>
      <div class="d-flex align-items-center justify-content-center flex-grow-1">
        <i class="fa-solid fa-spa fa-2xl"></i>
      </div>
    <% end %>
     <%= link_to categories_path, class: "btn-categories d-flex flex-column" do %>
      <span>Fitness</span>
      <div class="d-flex align-items-center justify-content-center flex-grow-1">
        <i class="fa-solid fa-heart-pulse fa-2xl"></i>
      </div>
    <% end %>

 </div>
<div class="cards-container my-4">
  <div class="flex-item justify-content-right">
        <div class= "search_bar d-flex flex-column">
            <%= form_with url: trips_path, method: :get, class: "d-flex" do %>
            <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Where would you like to go?"%>
            <%= submit_tag "Go", class: "btn-simple"%>
            <% end %>
        </div>
  </div>
 </div>
<div class="cards-container">


  <div class="row justify-content-center">
  <div class="col-11 col-md-8 col-lg-6">
  <div class="trip-cards my-2">
  <% @trips.each do |trip| %>
    <%= link_to trip_path(trip) do %>
      <div class="card-trip">
        <div class="card-trip-image" style="background-image: url('<%= trip.photos.attached? ? cl_image_path(trip.photos.first.key) : @fallback_image %>')">
        </div>
        <div class="card-trip-infos">
          <div>
            <h2><%= trip.name %></h2>
            <h4 class="card-trip-pricing">
              <%="$#{trip.double_pricing}"%>-<%="$#{trip.single_pricing}"%>
            </h4>
            <p>Overview:<%= trip.description %></p>
            <%= trip.categories.join(" | ")%>
          </div>

        </div>
      </div>
    <% end %>
  <% end %>
  </div>
</div>
  </div>
  </div>

  </div>
