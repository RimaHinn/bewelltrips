
  <div class="flex-container">

    <div class="flex-item">
      <%= link_to trips_path, class: "btn d-flex flex-column " do %>
        <span>Attend Trip</span>
        <div class="d-flex align-items-center justify-content-center flex-grow-1">
          <i class="fa-solid fa-spa fa-2xl"></i>
        </div>
      <% end %>
    </div>
    <div class="flex-item">
        <div class= "search_bar d-flex justify-content-left">
            <%= form_with url: trips_path, method: :get, class: "d-flex" do %>
            <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Where would you like to go?"%>
            <%= submit_tag "Go", class: "btn-simple"%>
            <% end %>
        </div>
     </div>

  </div>
